---
import { topbarLinks } from "src/constants";
---

<div class="bg-black bg-opacity-50 hidden md:block fixed top-0 w-full z-20">
  <div class="max-w-7xl mx-auto px-4">
    <ul
      class="flex justify-end items-center gap-4 font-bold text-white text-sm py-2"
    >
      {
        topbarLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class="hover:text-gray-300 transition duration-300"
            >
              {link.name}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</div>
