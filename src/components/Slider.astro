---
import { Image } from "astro:assets";

import slide1 from "@images/slider/banner-coragensc-4lt-1.jpg";
import slide2 from "@images/slider/banner-coragensc-100ml-3.jpg";
import slide3 from "@images/slider/banner-roundup-10lt-4.jpg";
---

<swiper-container
  class="w-full custom-swiper"
  loop="true"
  pagination="true"
  pagination-clickable="true"
  autoplay-delay="2500"
>
  <swiper-slide>
    <Image
      src={slide1}
      alt="Coragensc 4lt"
      class="w-full min-h-96 object-cover max-h-[750px]"
      loading="eager"
    />
  </swiper-slide>
  <swiper-slide>
    <Image
      src={slide2}
      alt="Coragensc 100ml"
      class="w-full min-h-96 object-cover max-h-[750px]"
      loading="eager"
    />
  </swiper-slide>
  <swiper-slide>
    <Image
      src={slide3}
      alt="Roundup 10lt"
      class="w-full min-h-96 object-cover max-h-[750px]"
      loading="eager"
    />
  </swiper-slide>
</swiper-container>

<script>
  import { register } from "swiper/element/bundle";

  register();
</script>
<style>
  .custom-swiper {
    --swiper-theme-color: #15803d;
  }
</style>
